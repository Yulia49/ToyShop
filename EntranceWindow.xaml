<Window x:Class="shop.EntranceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shop"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Autorization" Height="320" Width="400" WindowStyle="ToolWindow">
    <Grid>
        <StackPanel Background="#56cbf9">
            <Button x:Name="BackToMenu" Click="BackToMenu_Click" Content="Back" HorizontalAlignment="Left" Foreground="#4B0082" MaxHeight="30" Style="{StaticResource MaterialDesignFlatButton}"></Button>
            <TextBlock FontSize="30" HorizontalAlignment="Center" FontWeight="Bold" Margin="0" Foreground="#4B0082">Authorization</TextBlock>
            <TextBox x:Name="loginText" materialDesign:HintAssist.Hint="Enter login" Margin="10"></TextBox>
            <PasswordBox x:Name="passText" materialDesign:HintAssist.Hint="Enter password" Margin="10"></PasswordBox>
            <Button x:Name="ButtonLogin" Click="ButtonLogin_Click" Content="Login" Margin="10" Background="#b388eb" BorderBrush="#4B0082"></Button>

        </StackPanel>
    </Grid>
</Window>
